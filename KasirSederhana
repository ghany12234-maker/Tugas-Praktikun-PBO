import java.util.Scanner;

public class KasirSederhana {

    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);

        System.out.println("--- Program Kasir Sederhana ---");
        System.out.print("Apakah Anda memiliki kartu member? (y/n): ");
        String punyaMemberStr = input.next();
        boolean punyaMember = punyaMemberStr.equalsIgnoreCase("y");

        System.out.print("Masukkan total belanja (Rp): ");
        double totalBelanja = input.nextDouble();

        double diskon = 0;

        if (punyaMember) {
            if (totalBelanja > 500000) {
                diskon = 50000;
                System.out.println("Anda mendapatkan diskon member sebesar Rp50.000!");
            } else if (totalBelanja > 100000) {
                diskon = 15000;
                System.out.println("Anda mendapatkan diskon member sebesar Rp15.000!");
            }
        } else {
            if (totalBelanja > 100000) {
                diskon = 10000;
                System.out.println("Anda mendapatkan diskon umum sebesar Rp10.000!");
            }
        }

        double totalBayar = totalBelanja - diskon;
        if (totalBayar < 0) {
            totalBayar = 0; 
        }

        System.out.println("\n--- Rincian Pembayaran ---");
        System.out.printf("Total Belanja Awal: Rp%,.0f%n", totalBelanja);
        System.out.printf("Diskon yang Diterima: Rp%,.0f%n", diskon);
        System.out.printf("Total yang Harus Dibayar: Rp%,.0f%n", totalBayar);

        System.out.print("Masukkan jumlah uang yang diberikan pembeli (Rp): ");
        double uangDiberikan = input.nextDouble();

        double kembalian = uangDiberikan - totalBayar;

        if (kembalian >= 0) {
            System.out.printf("Uang yang Diberikan: Rp%,.0f%n", uangDiberikan);
            System.out.printf("Kembalian: Rp%,.0f%n", kembalian);
            System.out.println("Terima kasih telah berbelanja! 🙏");
        } else {
            System.out.println("⚠️ Uang yang diberikan kurang! Silakan bayar lunas.");
            System.out.printf("Kekurangan: Rp%,.0f%n", Math.abs(kembalian));
        }

        input.close();
    }
}
